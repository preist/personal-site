{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "seo": {
      "enabled": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "maxLength": 200,
      "required": true,
      "unique": true,
      "regex": "^(\\/$|\\/[a-z0-9]+(-[a-z0-9]+)*(\\/[a-z0-9]+(-[a-z0-9]+)*)*)$"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "sections.text-section",
        "sections.links-section",
        "sections.image-section"
      ]
    },
    "aside": {
      "type": "dynamiczone",
      "components": [
        "sections.text-section",
        "sections.links-section",
        "sections.image-section"
      ]
    }
  }
}
